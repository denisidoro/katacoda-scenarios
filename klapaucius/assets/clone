#!/usr/bin/env bash
set -euo pipefail

echo "Please insert the password:"
read -s pass

openssl version -a || true

mkdir -p ~/.ssh || true

decrypt() {

  cat /assets/.secrets/token_private.txt \
    | dot sec decrypt -p "$pass" \
    > ~/.ssh/id_rsa

  cat /assets/.secrets/token_public.txt \
    | dot sec decrypt -p "$pass" \
    > ~/.ssh/id_rsa.pub

  eval `ssh-agent -s`
  SSH_ASKPASS="/assets/scripts/askssh" DISPLAY=:0 ssh-add <<< "$pass"
  git clone git@github.com:denisidoro/klapaucius.git

}

decrypt || decrypt || decrypt

pass="redacted"
